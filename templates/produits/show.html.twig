    <table class="table">
        <tbody>
            <tr>
                <td>  <td><img src="{{'/uploads/'~produit.fichier }}"/></td></td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ produit.libelle }}</td>
            </tr>
            <tr>
